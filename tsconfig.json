{
  "compilerOptions": {
    // ğŸ—‚ Organisation des fichiers
    "rootDir": "./src",
    "outDir": "./dist",

    // ğŸŒ Module & Target
    "module": "nodenext",
    "target": "es2022",             // ESNext â†’ trop permissif pour Node stable 
    "esModuleInterop": true,        // pour importer modules CommonJS plus facilement

    // ğŸ”§ Types
    "types": ["node", "jest"],       // reconnait Jest et Node
    "lib": ["es2022"],               // API JS modernes
    "allowJs": false,                // uniquement TS

    // ğŸ“ Sorties et maps
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // ğŸ”’ Stricte vÃ©rification
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // ğŸ’» Modules et import/export
    "isolatedModules": true,
    "resolveJsonModule": true,          // pour importer des JSON
    "skipLibCheck": true,               // Ã©vite les erreurs dans node_modules
    "forceConsistentCasingInFileNames": true
  },

  "include": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
